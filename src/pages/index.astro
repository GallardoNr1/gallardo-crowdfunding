---
export const prerender = false;

import BaseLayout from '../layouts/BaseLayout.astro';
import FloatingEleents from '../components/FloatingEleents.astro';

import { getProjectsConfig, type ProjectConfig } from '../lib/supabase';

let projects: ProjectConfig[] | null = [];
let errorLoadingProjects = false;

try {
  projects = await getProjectsConfig();
} catch (error) {
  console.error('Error loading projects:', error);
  errorLoadingProjects = true;
}
---

<BaseLayout title='Gallardo Crowdfunding'>
  <div class='container'>
    {
      errorLoadingProjects && (
        <div class='global-error-banner'>
          <div class='error-content'>
            <span class='error-icon'>⚠️</span>
            <div class='error-text'>
              <strong>Problema cargando proyectos:</strong>
              Mostrando página sin datos en este momento.
            </div>
          </div>
        </div>
      )
    }

    {
      !errorLoadingProjects &&
        projects?.length !== undefined &&
        (projects.length === 0 ? (
          <p>No hay proyectos configurados todavía.</p>
        ) : (
          <ul class='projects-list'>
            {projects.map((project) => (
              <a
                href={`${project.redirect_url}?id=${project.id}`}
                target='_self'
                rel='noopener noreferrer'
                class='project-link'
              >
                <li class='project-card'>
                  {project.project_image_url && (
                    <img
                      src={project.project_image_url}
                      alt={project.project_name}
                      class='project-image'
                    />
                  )}

                  <div class='project-info'>
                    <h2>{project.project_name}</h2>

                    {project.project_description && (
                      <p class='project-description'>
                        {project.project_description}
                      </p>
                    )}

                    <p class='project-amount'>
                      Objetivo:{' '}
                      <strong>
                        {project.target_amount} {project.currency}
                      </strong>
                    </p>
<!-- Progress Bar -->
<div class="progress-wrapper">
  <div class="progress-info">
    <span>Recaudado:</span>
    <strong>{project.current_amount ?? 0} {project.currency}</strong>
  </div>

  <div class="progress-bar">
    <div
      class="progress-fill"
      style={`width: ${
        Math.min(
          100,
          Math.round(((project.current_amount ?? 0) / project.target_amount) * 100)
        )
      }%`}
    ></div>
  </div>

  <div class="progress-percent">
    {
      Math.min(
        100,
        Math.round(((project.current_amount ?? 0) / project.target_amount) * 100)
      )
    }%
  </div>
</div>

                    <p
                      class={`project-status status-${project.project_status}`}
                    >
                      Estado: {project.project_status}
                    </p>
                  </div>
                </li>
              </a>
            ))}
          </ul>
        ))
    }
  </div>
  <style>
    .container {
      max-width: 960px;
      margin: 0 auto;
      padding: 2rem 1rem 4rem;
    }

    h1 {
      text-align: center;
      margin-bottom: 2rem;
    }

    .projects-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .project-link {
      text-decoration: none;
      color: inherit;
      transition: all 0.2s ease;
    }

    .project-link:hover {
      cursor: pointer;
      scale: 1.02;
    }

    .project-card {
      display: flex;
      gap: 1rem;
      padding: 1rem;
      border-radius: 12px;
      border: 1px solid #e0e0e0;
      background: #ffffff;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    }

    .project-image {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 10px;
      flex-shrink: 0;
    }

    .project-info h2 {
      margin: 0 0 0.5rem;
    }

    .project-description {
      margin: 0 0 0.75rem;
      font-size: 0.95rem;
      color: #555;
    }

    .project-amount {
      margin: 0 0 0.25rem;
      font-weight: 500;
    }

    .progress-wrapper {
  margin: 0.75rem 0 1rem;
  width: 100%;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  font-size: 0.85rem;
  color: #444;
  margin-bottom: 4px;
}

.progress-bar {
  width: 100%;
  height: 10px;
  border-radius: 8px;
  background: #e0e0e0;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4caf50, #81c784);
  border-radius: 8px;
  transition: width 0.4s ease;
}

.progress-percent {
  text-align: right;
  margin-top: 4px;
  font-size: 0.8rem;
  color: #333;
  font-weight: 600;
}
    .project-status {
      margin: 0;
      font-size: 0.85rem;
      text-transform: capitalize;
    }

    .status-active {
      color: #4caf50;
    }

    .status-completed {
      color: #2196f3;
    }

    .status-paused {
      color: #ff9800;
    }

    .status-cancelled {
      color: #f44336;
    }

    .global-error-banner {
      background: #fff3cd;
      border: 1px solid #ffeeba;
      border-radius: 10px;
      padding: 10px 15px;
      margin-bottom: 20px;
    }

    .error-content {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .error-icon {
      font-size: 1.5rem;
    }

    .error-text {
      color: #856404;
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      .project-card {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .project-image {
        width: 160px;
        height: 160px;
      }
    }
  </style>
</BaseLayout>
