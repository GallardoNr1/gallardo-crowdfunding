<script>
  import { createContribution } from '../lib/supabase';

  // Los datos del servidor se leen desde el DOM en tiempo de ejecuci√≥n.

  class ContributionModalManager {
    private loadingOverlay: HTMLElement;
    private form: HTMLFormElement;
    private selectedLevel: any = null;
    private clientPaymentMethods: any[] = [];
    private clientCurrency: string = '‚Ç¨';
    private bizumNumber: string = '648 029 265';
    private bizumConcept: string = 'LEGO D&D + tu nombre';
    private projectId: string | null = null;

    constructor() {
      this.loadingOverlay = document.getElementById('loadingOverlay')!;
      this.form = document.getElementById(
        'contributionForm'
      ) as HTMLFormElement;
      // Leer datos inyectados por el servidor desde el DOM
      const dataNode = document.getElementById('contributionModalData');
      if (dataNode) {
        try {
          const raw = dataNode.getAttribute('data-payment-methods');
          this.clientPaymentMethods = raw ? JSON.parse(raw) : [];
        } catch (e) {
          this.clientPaymentMethods = [];
        }
        this.projectId = dataNode.getAttribute('data-project-id') || null;
        this.clientCurrency =
          dataNode.getAttribute('data-currency') || this.clientCurrency;
        this.bizumNumber =
          dataNode.getAttribute('data-bizum-number') || this.bizumNumber;
        this.bizumConcept =
          dataNode.getAttribute('data-bizum-concept') || this.bizumConcept;
      }
      this.init();
    }

    private init() {
      this.setupModalControls();
      this.setupFormHandling();
      this.setupPaymentMethodChange();
      this.setupCopyButtons();

      // Escuchar cuando se selecciona un nivel
      document.addEventListener('levelSelected', (e: any) => {
        this.handleLevelSelected(e.detail);
      });
    }

    private setupModalControls() {
      const cancelBtn = document.getElementById('cancelContribution');

      // Usar tu sistema de modales personalizado para cerrar
      cancelBtn?.addEventListener('click', () => {
        // Asumiendo que tienes una funci√≥n global para cerrar modales
        this.closeModal();
      });
    }

    private setupFormHandling() {
      // Validaci√≥n en tiempo real
      const inputs = this.form.querySelectorAll('input, textarea, select');
      inputs.forEach((input) => {
        input.addEventListener('input', () => this.validateForm());
        input.addEventListener('change', () => this.validateForm());
      });

      // Contador de caracteres para mensaje
      const messageInput = document.getElementById(
        'contributorMessage'
      ) as HTMLTextAreaElement;
      const charCounter = document.getElementById('charCounter');

      messageInput?.addEventListener('input', () => {
        const count = messageInput.value.length;
        if (charCounter) {
          charCounter.textContent = `${count}/150`;
          charCounter.style.color = count > 140 ? '#f44336' : '#999';
        }
      });

      // Manejar env√≠o del formulario
      this.form.addEventListener('submit', (e) => {
        e.preventDefault();
        this.handleFormSubmit();
      });

      // Botones del modal de √©xito
      const closeSuccessBtn = document.getElementById('closeSuccess');
      const shareBtn = document.getElementById('shareContribution');

      closeSuccessBtn?.addEventListener('click', () =>
        this.closeSuccessModal()
      );
      shareBtn?.addEventListener('click', () => this.shareContribution());
    }

    private setupPaymentMethodChange() {
      const paymentMethods = document.querySelectorAll(
        'input[name="paymentMethod"]'
      );

      paymentMethods.forEach((method) => {
        method.addEventListener('change', () => {
          this.handlePaymentMethodChange((method as HTMLInputElement).value);
        });
      });
    }

    private handlePaymentMethodChange(methodId: string) {
      const instructionsContainer = document.getElementById(
        'paymentInstructions'
      )!;
      const instructionsContent = document.getElementById(
        'instructionsContent'
      )!;

      // Ocultar instrucciones por defecto
      instructionsContainer.style.display = 'none';

      // Mostrar instrucciones espec√≠ficas
      if (methodId === 'bizum') {
        instructionsContent.innerHTML = `
                    <h4>üì± Instrucciones para Bizum</h4>
                    <div class="bank-details">
                        <div class="detail-row">
                            <span class="detail-label">N√∫mero Bizum:</span>
                            <span class="detail-value">${this.bizumNumber}</span>
                            <button type="button" class="copy-button" data-copy="${this.bizumNumber.replace(/\D/g, '')}">üìã</button>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Importe:</span>
                            <span class="detail-value">${this.selectedLevel?.amount || 0} ${this.clientCurrency}</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Concepto:</span>
                            <span class="detail-value">${this.bizumConcept}</span>
                        </div>
                    </div>
                    <p><strong>üìã Instrucciones:</strong></p>
                    <ol style="margin: 10px 0; padding-left: 20px;">
                        <li>Env√≠a el Bizum al n√∫mero <strong>${this.bizumNumber}</strong></li>
                        <li>Pon como concepto: <strong>"${this.bizumConcept}"</strong></li>
                        <li>Una vez enviado, env√≠a el formulario para registrar tu contribuci√≥n</li>
                        <li>Te confirmaremos la recepci√≥n por email</li>
                    </ol>
                    <div style="background: #e8f5e8; padding: 10px; border-radius: 8px; margin-top: 10px;">
                        <strong>üí° Tip:</strong> El concepto nos ayuda a identificar tu contribuci√≥n m√°s r√°pido.
                    </div>
                `;
        instructionsContainer.style.display = 'block';
      } else if (methodId === 'cash') {
        instructionsContent.innerHTML = `
                    <h4>ü§ù Pago en Efectivo</h4>
                    <div style="background: #fff3e0; padding: 15px; border-radius: 8px;">
                        <p><strong>üìç Instrucciones:</strong></p>
                        <ol style="margin: 10px 0; padding-left: 20px;">
                            <li>Env√≠a el formulario para registrar tu intenci√≥n</li>
                            <li>Te contactaremos por email para coordinar</li>
                            <li>Acordaremos lugar y momento para el intercambio</li>
                            <li>¬°Nos vemos pronto para la entrega! üòä</li>
                        </ol>
                        <div style="background: #e8f5e8; padding: 10px; border-radius: 8px; margin-top: 10px;">
                            <strong>üíö Perfecto para:</strong> Familiares, amigos cercanos y vecinos de la zona.
                        </div>
                    </div>
                `;
        instructionsContainer.style.display = 'block';
      }
    }

    private validateForm(): boolean {
      const formData = new FormData(this.form);
      const submitButton = document.getElementById(
        'finalContributeButton'
      ) as HTMLButtonElement;

      // Verificar campos requeridos
      const isValid = this.form.checkValidity() && this.selectedLevel;

      if (submitButton) {
        submitButton.disabled = !isValid;
        submitButton.style.opacity = isValid ? '1' : '0.6';
      }

      return isValid;
    }

    private async handleFormSubmit() {
      if (!this.validateForm()) {
        return;
      }

      this.showLoading();

      try {
        // Obtener datos del formulario
        const formData = new FormData(this.form);
        const contributionData: any = {
          levelId: String(formData.get('levelId') || ''),
          amount: Number(formData.get('amount')),
          contributorName: String(formData.get('contributorName') || ''),
          contributorEmail: String(formData.get('contributorEmail') || ''),
          contributorMessage: String(formData.get('contributorMessage') || ''),
          contributorEmoji: String(formData.get('contributorEmoji') || ''),
          isAnonymous: formData.get('isAnonymous') === 'on',
          paymentMethod: String(formData.get('paymentMethod') || ''),
          projectId: this.projectId,
        };

        const result = await this.submitContribution(contributionData);

        this.hideLoading();

        if (result && result.success) {
          this.showSuccessModal(contributionData);
        } else {
          const err =
            result && result.error
              ? result.error
              : 'Error al procesar la contribuci√≥n';
          alert(err);
        }
      } catch (error) {
        this.hideLoading();
        alert(
          'Error al enviar la contribuci√≥n. Por favor, int√©ntalo de nuevo.'
        );
      }
    }

    private async submitContribution(
      data: any
    ): Promise<{ success: boolean; error?: string } | null> {
      try {
        const res = await createContribution({
          contributorName: data.contributorName,
          contributorEmail: data.contributorEmail,
          contributorEmoji: data.contributorEmoji,
          amount: Number(data.amount),
          levelId: data.levelId || null,
          levelName: data.levelName || null,
          contributorMessage: data.contributorMessage,
          paymentMethod: data.paymentMethod,
          isAnonymous: !!data.isAnonymous,
          metadata: data.metadata || null,
          projectId: data.projectId || '',
        });

        if (!res || !res.success) {
          return {
            success: false,
            error: res?.error || 'Error en createContribution',
          };
        }

        // Disparar evento para actualizar la p√°gina principal
        this.updateMainPageData(data);

        return { success: true };
      } catch (err: any) {
        console.error('submitContribution error:', err);
        return { success: false, error: err?.message || String(err) };
      }
    }

    private showLoading() {
      this.loadingOverlay.style.display = 'flex';
      this.loadingOverlay.setAttribute('aria-live', 'assertive');
    }

    private hideLoading() {
      this.loadingOverlay.style.display = 'none';
    }

    private showSuccessModal(contributionData: any) {
      // Cerrar modal principal usando tu sistema
      this.closeModal();

      const successDetails = document.getElementById('successDetails');

      if (successDetails) {
        const paymentMethodNames: any = this.clientPaymentMethods.reduce(
          (acc: any, m: any) => {
            acc[m.id] = m.name;
            return acc;
          },
          {}
        );

        let statusMessage = '';
        if (contributionData.paymentMethod === 'bizum') {
          statusMessage = `<div style="background: #fff3e0; padding: 15px; border-radius: 8px; margin-top: 15px;"><strong>üì± Siguiente paso:</strong> Env√≠a el Bizum al ${this.bizumNumber} con el concepto "${this.bizumConcept}"</div>`;
        } else if (contributionData.paymentMethod === 'cash') {
          statusMessage = `<div style="background: #e8f5e8; padding: 15px; border-radius: 8px; margin-top: 15px;"><strong>ü§ù Siguiente paso:</strong> Te contactaremos por email para coordinar la entrega en efectivo</div>`;
        }

        successDetails.innerHTML = `
                    <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 15px;">
                        <div style="font-size: 2rem;" aria-hidden="true">${this.selectedLevel.emoji}</div>
                        <div>
                            <div style="font-weight: 700; color: #333;">Nivel: ${this.selectedLevel.name}</div>
                            <div style="color: #666;">Contribuci√≥n: ${this.selectedLevel.amount} ${this.clientCurrency}</div>
                        </div>
                    </div>
                    <div style="text-align: left;">
                        <strong>Nombre:</strong> ${contributionData.contributorName}<br>
                        <strong>Email:</strong> ${contributionData.contributorEmail}<br>
                        <strong>M√©todo de pago:</strong> ${paymentMethodNames[contributionData.paymentMethod] || contributionData.paymentMethod}<br>
                        ${contributionData.contributorMessage ? `<strong>Mensaje:</strong> "${contributionData.contributorMessage}"<br>` : ''}
                        <strong>Fecha:</strong> ${new Date().toLocaleDateString('es-ES')}
                    </div>
                    ${statusMessage}
                `;
      }

      // Abrir modal de √©xito usando tu sistema
      this.openSuccessModal();
    }

    private updateMainPageData(contributionData: any) {
      const event = new CustomEvent('contributionCompleted', {
        detail: {
          amount: this.selectedLevel.amount,
          contributor: {
            name: contributionData.contributorName,
            emoji: contributionData.contributorEmoji,
            message: contributionData.contributorMessage,
            level: this.selectedLevel.name,
            color: this.selectedLevel.color || '#4caf50',
            isAnonymous: contributionData.isAnonymous,
          },
        },
      });

      document.dispatchEvent(event);
    }

    private shareContribution() {
      const shareText = `¬°Acabo de contribuir al crowdfunding familiar para conseguir el set de LEGO D&D! üêâ‚ú® 
            
Nivel: ${this.selectedLevel.name} (${this.selectedLevel.amount}‚Ç¨)

¬°√önete a esta aventura √©pica y ayuda a esta familia a crear recuerdos m√°gicos! 

#LEGODnD #CrowdfundingFamiliar #AventuraEpica`;

      if (navigator.share) {
        navigator.share({
          title: 'üêâ ¬°Contribuci√≥n Registrada!',
          text: shareText,
          url: window.location.href,
        });
      } else {
        navigator.clipboard.writeText(shareText).then(() => {
          alert(
            '¬°Texto copiado al portapapeles! Ahora puedes pegarlo en tus redes sociales üì±'
          );
        });
      }
    }

    // M√©todos para integrar con tu sistema de modales
    private closeModal() {
      window.closeModal('contributionModal');
      this.resetForm();
    }

    private openSuccessModal() {
      window.openModal('successModal');
    }

    private closeSuccessModal() {
      window.closeModal('successModal');
    }

    private resetForm() {
      this.form.reset();

      // Limpiar campos adicionales
      const charCounter = document.getElementById('charCounter');
      if (charCounter) charCounter.textContent = '0/150';

      // Ocultar instrucciones
      document.getElementById('paymentInstructions')!.style.display = 'none';

      // Resetear validaci√≥n
      this.validateForm();
    }

    private handleLevelSelected(levelData: any) {
      this.selectedLevel = levelData;
      this.updateModalContent();
      this.openModal();
    }

    private openModal() {
      window.openModal('contributionModal');

      // Focus en el primer campo del formulario
      setTimeout(() => {
        const nameInput = document.getElementById(
          'contributorName'
        ) as HTMLInputElement;
        nameInput?.focus();
      }, 100);
    }

    private updateModalContent() {
      if (!this.selectedLevel) return;

      // Actualizar elementos visuales
      const levelEmoji = document.getElementById('levelEmoji');
      const levelName = document.getElementById('levelName');
      const levelDescription = document.getElementById('levelDescription');
      const levelAmount = document.getElementById('levelAmount');
      const totalAmount = document.getElementById('totalAmount');

      if (levelEmoji) levelEmoji.textContent = this.selectedLevel.emoji;
      if (levelName) levelName.textContent = this.selectedLevel.name;
      if (levelDescription)
        levelDescription.textContent = `Nivel ${this.selectedLevel.name} - ¬°Gracias por tu apoyo!`;
      if (levelAmount)
        levelAmount.textContent = `${this.selectedLevel.amount} ${this.clientCurrency}`;
      if (totalAmount)
        totalAmount.textContent = `${this.selectedLevel.amount} ${this.clientCurrency}`;

      // Actualizar campos ocultos del formulario
      const levelIdInput = document.getElementById(
        'selectedLevelId'
      ) as HTMLInputElement;
      const amountInput = document.getElementById(
        'selectedAmount'
      ) as HTMLInputElement;

      if (levelIdInput) levelIdInput.value = this.selectedLevel.id;
      if (amountInput) amountInput.value = this.selectedLevel.amount;
      this.validateForm();
    }

    private setupCopyButtons() {
      // Delegar eventos para botones de copiar
      document.addEventListener('click', async (e) => {
        const target = e.target as HTMLElement;
        if (target.classList.contains('copy-button')) {
          const textToCopy = target.dataset.copy;
          if (textToCopy) {
            await this.copyToClipboard(textToCopy, target);
          }
        }
      });
    }

    private async copyToClipboard(text: string, button: HTMLElement) {
      try {
        await navigator.clipboard.writeText(text);
        const originalText = button.textContent;
        button.textContent = '‚úÖ';
        setTimeout(() => {
          button.textContent = originalText;
        }, 2000);
      } catch (err) {
        console.error('Error al copiar:', err);
      }
    }

    // M√©todos p√∫blicos para uso externo
    public setLevel(levelData: any) {
      this.selectedLevel = levelData;
      this.updateModalContent();
    }

    public getSelectedLevel() {
      return this.selectedLevel;
    }
  }

  // Inicializar cuando el DOM est√© listo
  document.addEventListener('DOMContentLoaded', () => {
    new ContributionModalManager();
  });
</script>
