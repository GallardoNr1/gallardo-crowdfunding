---
import type { ContributionLevel } from '../lib/supabase';

export interface Props {
  levels?: ContributionLevel[];
  currency?: string;
  onLevelSelected?: string; // nombre de la funci√≥n callback
}

const {
  levels = [],
  currency = '‚Ç¨',
  onLevelSelected = 'handleLevelSelection',
} = Astro.props;
---

<div class='contributors-section'>
  <h3 class='contributors-title'>üè∞ Niveles de Contribuci√≥n</h3>

  <div class='contribution-levels'>
    {
      levels.map((level) => (
        <div
          class='level-card'
          data-level-id={level.id}
          data-amount={level.amount}
          style={`--level-color: ${level.color}`}
        >
          <div class='level-emoji'>{level.emoji}</div>
          <div class='level-name'>{level.name}</div>
          <div class='level-amount'>
            {level.amount} {currency}
          </div>
          <div class='level-description'>{level.description}</div>
