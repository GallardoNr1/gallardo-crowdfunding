const {
  familyMembers = [],
  mainMessage = defaultMainMessage,
  allowComments = true,
  memberTitle = 'Member Title',
  callToAction,
  project_id,
} = Astro.props;
---

<div class='message-section'>
  <div class='section-header'>
    <h3 class='section-title'>üíù Mensaje de Nuestra Familia</h3>
  </div>

  <div class='main-message'>
    <div class='message-content'>
      <div class='message-icon'>üè∞</div>
      <div
        class='message-text'
        id='messageText'
      >
        {
          mainMessage
            .split('\n')
            .map((paragraph) => paragraph.trim() && <p>{paragraph}</p>)
        }
      </div>
    </div>

    <div class='message-signature'>
      <div class='signature-text'>Con amor,</div>
      <div class='family-name'>La Familia Gallardo Esclapez</div>
      <div class='signature-date'>
        {
          new Date().toLocaleDateString('es-ES', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })
        }
      </div>
    </div>
  </div>

  <FamilyMembers
    familyMembers={familyMembers}
    title={memberTitle}
  />

  {
    allowComments && (
      <div class='comments-section'>
        <SupportMessageSection client:load />
        <SupportMessageFrom project_id={project_id} />
      </div>
    )
  }
  <CallToAction callToAction={callToAction} />
</div>

<style>
  .message-section {
    background: linear-gradient(145deg, #fce4ec, #f8bbd9);
    border-radius: 20px;
    padding: 30px;
    margin-bottom: 30px;
    position: relative;
    overflow: hidden;
  }

  .message-section::before {
    content: 'üíï';
    position: absolute;
    top: -20px;
    right: -20px;
    font-size: 150px;
    opacity: 0.1;
    transform: rotate(15deg);
  }

  .section-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .section-title {
    font-family: 'Fredoka One', cursive;
    font-size: 2rem;
    color: #c2185b;
    margin-bottom: 10px;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
  }

  .title-decoration {
    display: flex;
    justify-content: center;
    gap: 10px;
    animation: float 3s ease-in-out infinite;
  }

  .heart-icon {
    font-size: 1.5rem;
    animation: heartbeat 2s ease-in-out infinite;
  }

  .sparkle {
    font-size: 1.2rem;
    animation: sparkle 1.5s ease-in-out infinite;
  }

  @keyframes heartbeat {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
  }

  @keyframes sparkle {
    0%,
    100% {
      opacity: 0.5;
      transform: rotate(0deg);
    }
    50% {
      opacity: 1;
      transform: rotate(180deg);
    }
  }

  .main-message {
    background: white;
    border-radius: 18px;
    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border: 3px solid #f48fb1;
    position: relative;
  }

  .message-content {
    display: flex;
    gap: 20px;
    align-items: flex-start;
  }

  .message-icon {
    font-size: 3rem;
    flex-shrink: 0;
    margin-top: 5px;
    filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.1));
  }

  .message-text {
    flex: 1;
    font-size: 1.1rem;
    line-height: 1.7;
    color: #444;
  }

  .message-text p {
    margin-bottom: 15px;
  }

  .message-text p:last-child {
    margin-bottom: 0;
  }

  .message-signature {
    margin-top: 25px;
    text-align: right;
    border-top: 2px solid #f8bbd9;
    padding-top: 15px;
  }

  .signature-text {
    font-size: 1rem;
    color: #666;
    font-style: italic;
    margin-bottom: 5px;
  }

  .family-name {
    font-family: 'Fredoka One', cursive;
    font-size: 1.3rem;
    color: #c2185b;
    margin-bottom: 5px;
  }

  .signature-date {
    font-size: 0.9rem;
    color: #888;
  }

  .age-badge {
    position: absolute;
    top: -5px;
    right: -5px;
    background: #ff5722;
    color: white;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    font-weight: 700;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .member-effects {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .family-photos {
    margin-bottom: 30px;
  }

  .photos-title {
    font-family: 'Fredoka One', cursive;
    font-size: 1.5rem;
    color: #c2185b;
    text-align: center;
    margin-bottom: 20px;
  }

  .photos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
  }

  .photo-placeholder {
    background: linear-gradient(145deg, #ffffff, #f5f5f5);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    border: 2px dashed #f8bbd9;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .photo-placeholder:hover {
    border-color: #e91e63;
    transform: scale(1.02);
    background: linear-gradient(145deg, #fff, #fce4ec);
  }

  .photo-icon {
    font-size: 3rem;
    margin-bottom: 10px;
  }

  .photo-caption {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .message-section {
      padding: 20px;
    }

    .section-title {
      font-size: 1.6rem;
    }

    .main-message {
      padding: 20px;
    }

    .message-content {
      flex-direction: column;
      text-align: center;
    }

    .members-grid {
      grid-template-columns: 1fr;
    }

    .photos-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .comment-form {
      flex-direction: column;
      align-items: center;
    }

    .cta-stats {
      grid-template-columns: 1fr;
    }
  }
</style>
