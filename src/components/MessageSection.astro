---
import type { FamilyMember } from '../lib/supabase';
import CallToAction from './CallToAction.astro';
import FamilyMembers from './FamilyMembers.astro';
import FamilyPhotos from './FamilyPhotos.astro';
import SupportMessageSection from './react/SupportMessageSection/SupportMessageSection';
import SupportMessageFrom from './SupportMessageFrom.astro';

export interface Props {
  familyMembers?: FamilyMember[];
  mainMessage?: string;
  allowComments?: boolean;
  memberTitle?: string;
  callToAction: {
    icon: string;
    title: string;
    text: string;
    stats: { number: string; label: string }[];
  };
  project_id: string;
}

const defaultMainMessage = `
