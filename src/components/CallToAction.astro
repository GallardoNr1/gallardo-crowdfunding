---
export interface Props {
  callToAction: {
    icon: string;
    title: string;
    text: string;
    stats: { number: string; label: string }[];
  };
}

const { callToAction } = Astro.props;
---

<div class='call-to-action'>
  <div class='cta-content'>
    <div class='cta-icon'>{callToAction.icon}</div>
    <h4 class='cta-title'>{callToAction.title}</h4>
    <p class='cta-text'>{callToAction.text}</p>

    <div class='cta-stats'>
      {
        callToAction.stats.map(({ number, label }) => (
          <div class='stat-item'>
            <span class='stat-number'>{number}</span>
            <span class='stat-label'>{label}</span>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .call-to-action {
    background: linear-gradient(145deg, #fff3e0, #ffcc02);
    border-radius: 15px;
    padding: 25px;
    text-align: center;
    border: 3px solid #ff9800;
  }
  .cta-icon {
    font-size: 3rem;
    margin-bottom: 15px;
  }
  .cta-title {
    font-family: 'Fredoka One', cursive;
    font-size: 1.6rem;
    color: #e65100;
    margin-bottom: 10px;
  }
  .cta-text {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.5;
    margin-bottom: 20px;
  }
  .cta-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 15px;
  }
  .stat-item {
    background: white;
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  }
  .stat-number {
    display: block;
    font-size: 1.8rem;
    font-weight: 700;
    color: #e65100;
    margin-bottom: 5px;
  }
  .stat-label {
    display: block;
    font-size: 0.9rem;
    color: #666;
  }
  @media (max-width: 768px) {
    .cta-stats {
      grid-template-columns: 1fr;
    }
  }
</style>
