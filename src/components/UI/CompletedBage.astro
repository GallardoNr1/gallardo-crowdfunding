---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
}

const { size = 'md' } = Astro.props;
---

<div class={`completed-badge ${size}`}>✔</div>

<style>
  .completed-badge {
    position: absolute;
    top: 0;
    right: 0;
    color: #ffffff; /* tick blanco */
    font-weight: 900;
    display: flex;
    box-shadow: inset 0 5px 15px rgba(0, 0, 0, 0.27);
    z-index: 10;
    background: #2ecc71;
    clip-path: polygon(100% 0, 0 0, 100% 100%);
    padding: 0;
  }

  /* Tamaños */
  .completed-badge.sm {
    width: 4rem;
    height: 4rem;
    font-size: 1.3rem;
    padding-top: 0.3rem;
    padding-left: 2.5rem;
  }

  .completed-badge.md {
    width: 7rem;
    height: 7rem;
    font-size: 2rem;
    padding-top: 0.5rem;
    padding-left: 4.5rem;
  }

  .completed-badge.lg {
    width: 10rem;
    height: 10rem;
    font-size: 2.8rem;
    padding-top: 0.8rem;
    padding-left: 6.5rem;
  }
</style>
