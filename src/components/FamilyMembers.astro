---
import type { FamilyMember } from '../lib/supabase';

export interface Props {
  familyMembers?: FamilyMember[];
  title?: string;
}

const { familyMembers = [], title } = Astro.props;
---

<div class='family-members'>
  <h4 class='members-title'>{title}</h4>
  <div class='members-grid'>
    {
      familyMembers.map((member, index) => (
        <div
          class='member-card'
          style={`--animation-delay: ${index * 0.2}s`}
        >
          <div class='member-avatar'>
            <span class='avatar-emoji'>{member.emoji}</span>
            <div class='avatar-border' />
            {member.age && <div class='age-badge'>{member.age}</div>}
          </div>

          <div class='member-info'>
            <div class='member-name'>{member.name}</div>
            <div class='member-role'>{member.role}</div>
            <div class='member-message'>
              <div class='quote-mark'>"</div>
              <p class='quote-text'>{member.message}</p>
              <div class='quote-mark closing'>"</div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .family-members {
    margin-bottom: 30px;
  }

  .members-title {
    font-family: 'Fredoka One', cursive;
    font-size: 1.5rem;
    color: #c2185b;
    text-align: center;
    margin-bottom: 25px;
  }

  .members-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }

  .member-card {
    background: white;
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    border: 2px solid #f8bbd9;
    animation: slideInUp 0.6s ease-out var(--animation-delay);
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .member-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    border-color: #e91e63;
  }

  .member-avatar {
    position: relative;
    width: 80px;
    height: 80px;
    margin: 0 auto 15px;
  }

  .avatar-emoji {
    width: 80px;
    height: 80px;
    background: linear-gradient(145deg, #e91e63, #c2185b);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    box-shadow: 0 6px 20px rgba(233, 30, 99, 0.3);
  }

  .avatar-border {
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    border: 3px solid #f8bbd9;
    border-radius: 50%;
    animation: borderPulse 3s ease-in-out infinite;
  }

  @keyframes borderPulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.6;
    }
    50% {
      transform: scale(1.1);
      opacity: 1;
    }
  }

  .age-badge {
    position: absolute;
    top: -5px;
    right: -5px;
    background: #ff5722;
    color: white;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    font-weight: 700;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .member-info {
    text-align: center;
  }

  .member-name {
    font-family: 'Fredoka One', cursive;
    font-size: 1.3rem;
    color: #c2185b;
    margin-bottom: 5px;
  }

  .member-role {
    font-size: 1rem;
    color: #666;
    font-weight: 600;
    margin-bottom: 15px;
    font-style: italic;
  }

  .member-message {
    position: relative;
    background: #f8f9fa;
    border-radius: 10px;
    padding: 15px;
    border-left: 4px solid #e91e63;
  }

  .quote-mark {
    font-size: 2rem;
    color: #e91e63;
    opacity: 0.6;
    position: absolute;
    top: -5px;
    left: 5px;
    font-family: serif;
  }

  .quote-mark.closing {
    bottom: -15px;
    right: 5px;
    top: auto;
    left: auto;
  }

  .quote-text {
    font-size: 0.95rem;
    color: #555;
    line-height: 1.5;
    margin: 10px 15px;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .members-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
