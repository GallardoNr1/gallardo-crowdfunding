---
export interface Props {
  currentAmount: number;
  targetAmount: number;
  currency?: string;
  title?: string;
}

const { currentAmount, targetAmount, currency = '€', title } = Astro.props;

// Calcular porcentaje
const percentage = Math.min((currentAmount / targetAmount) * 100, 100);
const roundedPercentage = Math.round(percentage);
---

<div class='progress-section'>
  <h3 class='progress-title'>{title}</h3>

  <div class='progress-container'>
    <div
      class='progress-bar'
      data-percentage={percentage}
      style={`width: ${percentage}%`}
    >
      <div class='progress-shine'></div>
    </div>
  </div>

  <div class='progress-info'>
    <div class='amount-current'>
      <span class='amount-label'>Recaudado</span>
      <span
        class='amount-value'
        data-target={currentAmount}
      >
        {currentAmount.toFixed(2)}
        {currency}
      </span>
    </div>

    <div class='percentage-display'>
      <span
        class='percentage-value'
        data-target={roundedPercentage}
      >
        {roundedPercentage}%
      </span>
    </div>

    <div class='amount-target'>
      <span class='amount-label'>Objetivo</span>
      <span class='amount-value'>
        {targetAmount.toFixed(2)}
        {currency}
      </span>
    </div>
  </div>

  <div class='progress-stats'>
    <div class='stat-item'>
      <span class='stat-number'
        >{(targetAmount - currentAmount).toFixed(2)} {currency}</span
      >
      <span class='stat-label'>Faltan por conseguir</span>
    </div>

    <div class='stat-item'>
      <span class='stat-number'
        >{Math.ceil((targetAmount - currentAmount) / 25)}</span
      >
      <span class='stat-label'>Contribuciones de 25€ necesarias</span>
    </div>
  </div>
</div>

<style>
  .progress-section {
    background: linear-gradient(145deg, #fff3e0, #ffcc02);
    border-radius: 20px;
    padding: 30px;
    margin-bottom: 30px;
    position: relative;
    box-shadow: 0 10px 30px rgba(255, 204, 2, 0.2);
  }

  .progress-title {
    font-family: 'Fredoka One', cursive;
    font-size: 1.8rem;
    color: #e65100;
    text-align: center;
    margin-bottom: 25px;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
  }

  .progress-container {
    background: #fff;
    border-radius: 25px;
    padding: 8px;
    margin-bottom: 25px;
    box-shadow: inset 0 4px 12px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
  }

  .progress-bar {
    height: 40px;
    background: linear-gradient(90deg, #4caf50, #8bc34a, #4caf50);
    background-size: 200% 100%;
    border-radius: 20px;
    width: 0%;
    transition: width 2s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    animation: gradientShift 3s ease-in-out infinite;
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .progress-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    animation: shine 2s infinite 1s;
  }

  @keyframes shine {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }

  .progress-info {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 20px;
    align-items: center;
    margin-bottom: 25px;
  }

  .amount-current,
  .amount-target {
    text-align: center;
  }

  .amount-current {
    justify-self: start;
  }

  .amount-target {
    justify-self: end;
  }

  .percentage-display {
    justify-self: center;
    background: white;
    border-radius: 50%;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    border: 4px solid #4caf50;
  }

  .amount-label {
    display: block;
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
    margin-bottom: 5px;
  }

  .amount-value {
    display: block;
    font-size: 1.3rem;
    font-weight: 700;
    color: #2e7d32;
  }

  .percentage-value {
    font-size: 1.4rem;
    font-weight: 700;
    color: #2e7d32;
  }

  .progress-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    padding-top: 20px;
    border-top: 2px solid rgba(230, 81, 0, 0.2);
  }

  .stat-item {
    text-align: center;
    background: rgba(255, 255, 255, 0.6);
    padding: 15px;
    border-radius: 15px;
    transition: transform 0.3s ease;
  }

  .stat-item:hover {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.8);
  }

  .stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #d32f2f;
    margin-bottom: 5px;
  }

  .stat-label {
    display: block;
    font-size: 0.9rem;
    color: #555;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .progress-section {
      padding: 20px;
    }

    .progress-title {
      font-size: 1.5rem;
    }

    .progress-info {
      grid-template-columns: 1fr;
      gap: 15px;
      text-align: center;
    }

    .amount-current,
    .amount-target,
    .percentage-display {
      justify-self: center;
    }

    .percentage-display {
      order: -1;
      margin-bottom: 10px;
    }

    .progress-stats {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    .stat-number {
      font-size: 1.3rem;
    }

    .stat-label {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .progress-bar {
      height: 30px;
    }

    .percentage-display {
      width: 60px;
      height: 60px;
    }

    .percentage-value {
      font-size: 1.2rem;
    }

    .amount-value {
      font-size: 1.1rem;
    }
  }
</style>

<script>
  // Animar la barra de progreso al cargar
  document.addEventListener('DOMContentLoaded', () => {
    const progressBar = document.querySelector('.progress-bar') as HTMLElement;

    if (progressBar) {
      // Resetear el ancho inicialmente
      progressBar.style.width = '0%';

      // Animar después de un pequeño delay
      setTimeout(() => {
        const percentage = progressBar.dataset.percentage;
        if (percentage) {
          progressBar.style.width = percentage + '%';
        }
      }, 500);
    }

    // Animar los números contando
    const animateNumbers = () => {
      const numberElements = document.querySelectorAll(
        '[data-target]'
      ) as NodeListOf<HTMLDivElement>;

      numberElements.forEach((element) => {
        const target = parseFloat(element.dataset.target || '0');
        const duration = 2000; // 2 segundos
        const step = target / (duration / 16); // 60fps
        let current = 0;

        const updateNumber = () => {
          current += step;
          if (current < target) {
            if (element.textContent?.includes('%')) {
              element.textContent = Math.floor(current) + '%';
            } else if (element.textContent?.includes('€')) {
              element.textContent = current.toFixed(2) + ' €';
            }
            requestAnimationFrame(updateNumber);
          } else {
            // Mostrar el valor final
            if (element.textContent?.includes('%')) {
              element.textContent = Math.round(target) + '%';
            } else if (element.textContent?.includes('€')) {
              element.textContent = target.toFixed(2) + ' €';
            }
          }
        };

        // Iniciar la animación después de un delay
        setTimeout(updateNumber, 800);
      });
    };

    animateNumbers();
  });
</script>
