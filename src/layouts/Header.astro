---
export interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'Gallardo Crowdfunding',
  subtitle = 'Elige un proyecto y Ãºnete a hacerlo realidad',
} = Astro.props;
---

<div class='header'>
  <h1 class='title'>{title}</h1>
  <p class='subtitle'>{subtitle}</p>
</div>

<style>
  .header {
    text-align: center;
    padding: 40px 20px;
    margin-bottom: 40px;
    background: #1f2937;
  }

  .title {
    font-family: 'Poppins', sans-serif;
    font-size: 2.4rem;
    font-weight: 700;
    color: #e5e7eb;
    margin-bottom: 10px;
  }

  .subtitle {
    font-size: 1.1rem;
    color: #e5e7eb;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .title {
      font-size: 1.8rem;
    }

    .subtitle {
      font-size: 1rem;
    }
  }
</style>
